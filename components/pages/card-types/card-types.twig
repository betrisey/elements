    <p><strong>Laboratories</strong></p>
    <div class="row">
      <div class="col-md-4 d-flex">
        {% include '@components/teaser-mission/teaser-mission-laboratory.twig' %}
      </div>
    </div>

    <p><strong>Research field</strong></p>
    <div class="row">
      <div class="col-md-4 d-flex">
        {% include '@components/teaser-mission/teaser-mission-research-field.twig' %}
