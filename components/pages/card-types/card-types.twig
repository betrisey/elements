    <div class="row">
      <div class="col-md-4 d-flex">
        {% include '@components/teaser-mission/teaser-mission-program.twig' %}
      </div>
    </div>

    <p><strong>Bachelor project</strong></p>
    <div class="row">
      <div class="col-md-4 d-flex">
        {% include '@components/teaser-mission/teaser-mission-bachelor-project.twig' %}
      </div>
      <div class="col-md-4 d-flex">
        {% include '@components/teaser-mission/teaser-mission-bachelor-project.twig' with {'count': 2} %}
      </div>
    </div>
